DROP TABLE IF EXISTS DS_COMMON_USERTYPE;
CREATE TABLE DS_COMMON_USERTYPE
(
   ID                   BIGINT NOT NULL COMMENT '主键',
   NAME                 VARCHAR(300) COMMENT '名称',
   ALIAS                VARCHAR(300) COMMENT '标识',
   STATUS               INT(1) COMMENT '状态(1)',
   SEQ                  BIGINT(18) COMMENT '排序',
   MEMO                 VARCHAR(3000) COMMENT '扩展信息',
   RESOURCES            VARCHAR(4000) COMMENT '资源集合',
   PRIMARY KEY (ID)
) COMMENT '用户类型';

ALTER TABLE DS_COMMON_USER
DROP COLUMN TYPE,
DROP COLUMN TYPENAME,
DROP COLUMN RESOURCES;


ALTER TABLE DS_COMMON_USER
ADD COLUMN TYPE  varchar(300) NULL COMMENT '类型' AFTER ORGID,
ADD COLUMN TYPENAME  varchar(300) NULL COMMENT '类型名称' AFTER TYPE,
ADD COLUMN EXALIAS  varchar(300) NULL COMMENT '类型扩展标识' AFTER TYPENAME,
ADD COLUMN EXNAME  varchar(300) NULL COMMENT '类型扩展名称' AFTER EXALIAS;


